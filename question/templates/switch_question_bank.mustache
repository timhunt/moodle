{{!
    @template core_question/view_banks

    Example context (json):
    {
        "title": "Select question bank",
        "quizmodid": 1,
        "quizname": "Quiz 1",
        "hasopenbanks": true,
        "openbanks": [
                {
                    "modid": 2,
                    "name": "Question bank 1"
                },
                {
                    "modid": 3,
                    "name": "Question bank 2"
                },
                {
                    "modid": 4,
                    "name": "Question bank 3"
                }
        ],
        "hasclosedbanks": true,
        "closedbanks": [
                {
                    "modid": 1,
                    "name": "Quiz 1"
                },
                {
                    "modid": 5,
                    "name": "Quiz 2"
                },
                {
                    "modid": 6,
                    "name": "Quiz 3"
                }
        ],
        "hasrecentlyviewedbanks": true,
        "recentlyviewedbanks": [
                {
                    "modid": 2,
                    "name": "Question bank 1"
                },
                {
                    "modid": 3,
                    "name": "Question bank 3"
                },
            ]
        },
    }
}}
{{$title}}{{/title}}

<div class="quiz-bank">
    <h5>{{#str}}quizquestionbank, core_question{{/str}}</h5>
    <a href="#" class="ml-3" data-newmodid="{{quizmodid}}">{{quizname}}</a>
</div>

<hr class="w-75">

{{#hascourseopenbanks}}
    <div class="course-open-banks">
        <h5>{{#str}}banksincourse, core_question{{/str}}</h5>
        {{#courseopenbanks}}
            <ul class="list-unstyled ml-3">
                <li>
                    <a href="#" data-newmodid="{{modid}}">{{name}}</a>
                </li>
            </ul>
        {{/courseopenbanks}}
    </div>
    <hr class="w-75">
{{/hascourseopenbanks}}

{{#hasrecentlyviewedbanks}}
    <div class="recently-viewed-banks">
        <h5>{{#str}}recentlyviewedquestionbanks, core_question{{/str}}</h5>
        {{#recentlyviewedbanks}}
            <ul class="list-unstyled ml-3">
                <li>
                    <a href="#" data-newmodid="{{modid}}">{{coursenamebankname}}</a>
                </li>
            </ul>
        {{/recentlyviewedbanks}}
    </div>
    <hr class="w-75">
{{/hasrecentlyviewedbanks}}

<div class="search-banks">
    <h5>{{#str}}otherquestionbank, core_question{{/str}}</h5>
    <select class="custom-select" id="searchbanks">
        <option value=""></option>
        {{#allopenbanks}}
            <option value="{{modid}}">{{{coursenamebankname}}}</option>
        {{/allopenbanks}}
    </select>
</div>
