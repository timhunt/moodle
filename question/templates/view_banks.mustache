{{!
    @template core_question/view_banks

    Example context (json):
    {
        "hasopenbanks": boolean,
        "openbanks": [core_question/question_banks_list],
        "hasclosedbanks": boolean,
        "closedbanks": [core_question/question_banks_list],
        "createdefault": single_button,
        "addbanks": action_link
    }
}}
{{^openbanks}}
    <div class="alert alert-info">
        {{#str}}nobanks, question{{/str}}
        {{#createdefault}}
            <div>
                {{> core/single_button }}
            </div>
        {{/createdefault}}
    </div>
{{/openbanks}}

{{#hasopenbanks}}
    <div class="open-banks">
        {{#openbanks}}
            {{< core_question/question_banks_list}}
            {{/core_question/question_banks_list}}
        {{/openbanks}}
    </div>
{{/hasopenbanks}}

{{#addbanks}}
    <div class="add-bank pt-2">
        <ul class="list-unstyled">
            <li>
                {{> core/action_link}}
            </li>
        </ul>
    </div>
{{/addbanks}}

{{#hasclosedbanks}}
    <div class="closed-banks pt-5">
        <h2>{{#str}}otherbanks, question{{/str}}</h2>
        <p>{{#str}}otherbanksdesc, question{{/str}}</p>
        {{#closedbanks}}
            {{< core_question/question_banks_list}}
            {{/core_question/question_banks_list}}
        {{/closedbanks}}
    </div>
{{/hasclosedbanks}}
